pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Checkout') {
            steps {
                sh 'echo passed'
                git branch: 'main', url: 'https://github.com/arifislam007/spring-bot-jenkins-k8s.git'
            }
        }
        stage('Build and Test') {
            steps {
                sh 'ls -ltr'
                sh 'mvn clean package'
                script {
                    sh 'chmod -R 777 target'
                }
            }
        }
        stage('Dockedr Image Build') {
            steps {
                sh 'docker build -t arifislam/spring-bot:$BUILD_NUMBER .'
            }
        }
        stage('Docker Hub Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Docker Push') {
            steps {
                sh 'docker push arifislam/spring-bot:$BUILD_NUMBER'
            }
        }
		stage('Update Deployment FIle') {
            steps {
                sh "sed -i 's/spring-bot:base/spring-bot:${BUILD_NUMBER}/' ./deployment.yml"
            }
        }
		stage("Push to Git Repository") {
            environment {
                GITHUB_TOKEN = "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"
                GIT_USER_NAME = "arifislam007"
                GIT_REPO_NAME = "spring-bot-jenkins-k8s"
            }
            steps {
                withCredentials([gitUsernamePassword(credentialsId: 'githubaccess', gitToolName: 'Default')]) {
                    sh '''
                        #git fetch origin
                        #git checkout -B staging origin/staging  # Switch to the remote 'staging' branch
                        #git pull origin/staging                # Integrate remote changes
                        git config --global user.email "islam.arif87@gmail.com"
                        git config --global user.name "arifislam007"
                        git add deployment.yml
                        git commit -m "update deployment file ${BUILD_NUMBER}"
                        #git merge --continue
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:mian
                        #git push https://github.com/arifislam007/spring-bot-jenkins-k8s.git HEAD:testing
                        #git push origin staging:staging                # Push your changes to remote 'staging'
                    '''
                }
            }
        }

		
    }
	
    post {
        always {
            sh 'docker logout'
        }
    }
}
