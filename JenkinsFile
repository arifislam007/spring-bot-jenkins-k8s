pipeline {
    agent any
    stages {
        stage("Clone Git Repository") {
            steps {
                git(
                    url: "https://github.com/arifislam007/spring-bot-jenkins-k8s.git",
                    branch: "main",
                    changelog: true,
                    poll: true
                )
            }
        }
        stage("Create artifacts or make changes") {
            steps {
                sh''' 
				touch testfile
                git add testfile
                git commit -m 'Add testfile from Jenkins Pipeline'
				sed -i "s/spring-bot:base/spring-bot:${BUILD_NUMBER}/g" ./deployment.yml
				'''
            }
        }
        stage("Push to Git Repository") {
            steps {
                withCredentials([gitUsernamePassword(credentialsId: 'gitTokenAccess', gitToolName: 'Default')]) {
					sh'''
					git config --global user.name "Jenkins Pipeline"
					git config --global user.email "jenkins@localhost"
					git push -u origin main
					'''
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
