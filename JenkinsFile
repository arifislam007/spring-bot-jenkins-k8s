pipeline {
    agent any
    stages {
        stage("Clone Git Repository") {
            steps {
                git(
                    url: "https://github.com/arifislam007/spring-bot-jenkins-k8s.git",
                    branch: "base",
                    changelog: true,
                    poll: true
                )
            }
        }
        stage("Create artifacts or make changes") {
            steps {
                sh''' 
		echo ${BUILD_NUMBER}
		sed -i "s/spring-bot:base/spring-bot:${BUILD_NUMBER}/g" ./deployment.yml
                #git commit -m 'Update deployment file'
		'''
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
