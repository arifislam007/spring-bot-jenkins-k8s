pipeline {
  agent any
  stages {
    stage('Checkout Scm') {
      steps {
        git(url: 'https://github.com/arifislam007/spring-bot-jenkins-k8s.git', credentialsId: 'gitTokenAccess')
      }
    }

    stage('Shell script 0') {
      steps {
        sh 'sed -i \'s/spring-bot:base/spring-bot:${BUILD_NUMBER}/\' ./deployment.yml'
      }
    }

  }
  post {
    always {
      echo 'No converter for Publisher: hudson.plugins.git.GitPublisher'
    }

  }
}
